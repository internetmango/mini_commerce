= link_to admin_categories_path, class: 'btn btn-primary btn-sm' do
  %span{'data-feather' => 'arrow-left-circle'}
%h1.text-center Category info
%br/
%br/
.row
  .col-12
    .action-bar
      = link_to edit_admin_category_path(@category), class: 'btn btn-primary btn-sm mr-1' do
        %span{'data-feather' => 'edit'}
      = link_to admin_category_path(@category), method: :delete, class: 'btn btn-primary btn-sm mr-1' do
        %span{'data-feather' => 'trash'}
.row
  .col-md-6.mt-5.col.col-sm-6.col-xs-12
    .card.p-3
      %h6.text-center Category
      %hr
        %p#notice= notice
        %dl.row
          %dt.col-sm-6 Name:
          %dd.col-sm-5
            = @category.name
          %dt.col-sm-6 Image:
          %dd.col-sm-5
            - if @category.image.attached?
              = image_tag @category.image, class: "img-thumbnail"
            - else
              = 'No image'
