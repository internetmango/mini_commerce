= link_to admin_featured_products_path, class: 'btn btn-danger btn-sm' do
  %span{'data-feather' => 'arrow-left-circle'}
%h1.text-center Edit Featured Product
%br/
%br/
.row
  .col-md-4.mx-auto.mt-5.col.col-sm-6.col-xs-12
    .card.p-3
      %h6.text-center Featured Product
      %hr
      = form_for(@featured_product, url: admin_featured_product_path(@featured_product)) do |f|
        .form-group
          = f.label :product_id
          = f.text_field :product_id, autofocus: true, autocomplete: 'product_id', class: 'form-control'
        .form-group
          = f.label :listing_type
          = f.select :listing_type, ['top_selling','featured'], class: 'form-control'
        .actions
          = f.submit 'Submit', class: 'btn btn-danger btn-block'
      .py-2
