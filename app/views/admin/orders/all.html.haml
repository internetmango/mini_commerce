.row
  .col-12
    .py-3
      %form.form-inline.my-2.my-lg-0{:action => root_path}
        %input.form-control.form-control-sm.m-1.mr-sm-2{"aria-label" => "Search", name: "q", :placeholder => "Order number", :type => "search"}/
        %button.btn.btn-danger.btn-sm.mx-2.my-2.my-sm-0{type: 'submit'} Search
      %br/
      - if @orders.blank?
        %p
          %b No orders found
      - else
        %table.table.table-striped.table-sm.table-bordered.table-responsive-sm
          %thead
            %tr
              %th Order Number
              %th Status
              %th Subtotal
              %th Action
          %tbody
            - @orders.each do |order|
              %tr
                %td
                  = link_to order.order_number,admin_orders_path(:id => order.id)
                %td= order.status
                %td= order.sub_total
                %td
                  %span>
                    = link_to edit_admin_orders_path(:id => order.id), class: 'nav-link' do
                      %span{'data-feather' => 'edit'}