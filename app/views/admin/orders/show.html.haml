= link_to admin_orders_path, class: 'btn btn-danger btn-sm' do
  %span{'data-feather' => 'arrow-left-circle'}
%h1.text-center Order info
%br/
%br/
.row
  .col-12
    .action-bar
      = link_to admin_order_path(@order), method: :delete, class: 'btn btn-danger btn-sm' do
        %span{'data-feather' => 'trash'}
.row
  .col-md-4.mx-auto.mt-5.col.col-sm-6.col-xs-12
    .card.p-3
      %h6.text-center Order/#{@order.order_number}
      %hr
        %p#notice= notice
        %dl.row
          %dt.col-sm-6 Order Number:
          %dd.col-sm-5
            = @order.order_number
          %dt.col-sm-6 Subtotal:
          %dd.col-sm-5
            = @order.sub_total
          %dt.col-sm-6 Status:
          %dd.col-sm-5
            = @order.status
      .py-2