.row
  .col-12
    %h3.text-center Products
.row
  .col-12
    .action-bar
      = link_to new_admin_product_path, class: 'btn btn-danger btn-sm' do
        %span{'data-feather' => 'plus'}
.row
  .col-12
    .py-3
      %form.form-inline.my-2.my-lg-0{action: root_path}
        %input.form-control.form-control-sm.m-1.mr-sm-2{'aria-label' => 'Search', name: 'q', placeholder: 'Name or Email', type: 'search'}/
        %button.btn.btn-danger.btn-sm.mx-2.my-2.my-sm-0{type: 'submit'} Search
      %br/
      - if @products.blank?
        %p
          %b No products found
        %p Add a product by clicking the above button or upload a file of product.
      - else
        %table.table.table-striped.table-sm.table-bordesred.table-responsive-sm
          %thead
            %tr
              %th Name
              %th Category
              %th Description
              %th Price
              %th Actions

          %tbody
            - @products.each do |product|
              %tr
                %td
                  = link_to product.name, admin_product_path(product)
                %td= product.category.name
                %td= product.description
                %td= product.price
                %td
                  %span>
                    = link_to edit_admin_product_path(product), class: 'nav-link' do
                      %span{'data-feather' => 'edit'}
      = pagy_bootstrap_nav(@pagy).html_safe
