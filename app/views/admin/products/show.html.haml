= link_to admin_products_path(@product), class: 'btn btn-danger btn-sm' do
  %span{'data-feather' => 'arrow-left-circle'}
%br/
%br/
.row
  .col-12
    .action-bar
      = link_to edit_admin_product_path(@product), class: 'btn btn-danger btn-sm mr-1' do
        %span{'data-feather' => 'edit'}
      = link_to admin_product_path(@product), method: :delete, class: 'btn btn-danger btn-sm mr-1' do
        %span{'data-feather' => 'trash'}
.row
  .col-md-4.mt-5.col.col-sm-6.col-xs-12
    .card.p-3
      %h6.text-center Product Info
      %hr
        %p#notice= notice
        %p
          %strong Name:
          = @product.name
        %p
          %strong Category:
          = @product.category.name
        %p
          %strong Description:
          = @product.description
        %p
          %strong Slug:
          = @product.slug
        %p
          %strong Price:
          = @product.price
      .py-2
