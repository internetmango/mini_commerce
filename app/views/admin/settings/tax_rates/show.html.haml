= link_to admin_settings_tax_rates_path, class: 'btn btn-primary btn-sm' do
  %span{'data-feather' => 'arrow-left-circle'}
%h1.text-center Tax info
%br/
%br/
.row
  .col-12
    .action-bar
      = link_to admin_settings_tax_rate_path(@tax_rate), method: :delete, class: 'btn btn-primary btn-sm' do
        %span{'data-feather' => 'trash'}
.row
  .col-md-4.mx-auto.mt-5.col.col-sm-6.col-xs-12
    .card.p-3
      %h6.text-center Tax Rate/#{@tax_rate.name}
      %hr
        %p#notice= notice
        %dl.row
          %dt.col-sm-6 Name:
          %dd.col-sm-5
            = @tax_rate.name
          %dt.col-sm-6 Rate:
          %dd.col-sm-5
            = @tax_rate.rate