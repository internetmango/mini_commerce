= link_to admin_users_path, class: 'btn btn-primary btn-sm' do
  %span{'data-feather' => 'arrow-left-circle'}
%h1.text-center Edit User
%br/
%br/
.row
  .col-12
    .action-bar
      = link_to reset_password_admin_user_path(@user), class: 'btn btn-primary btn-sm' do
        %span{'data-feather' => 'tool'}
        Reset password
.row
  .col-md-4.mx-auto.mt-5.col.col-sm-6.col-xs-12
    .card.p-3
      %h6.text-center User
      %hr
      = form_for(@user, url: admin_user_path(@user)) do |f|
        .form-group
          = f.label :name
          = f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control'
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
        .form-group
          = f.label :mobile
          = f.text_field :mobile, autofocus: true, autocomplete: 'mobile', class: 'form-control'
        .form-check
          = f.check_box :admin, class: 'form-check-input'
          = f.label :admin
        .actions
          = f.submit 'Submit', class: 'btn btn-primary btn-block'
      .py-2
