= link_to admin_users_path, class: 'btn btn-primary btn-sm' do
  %span{'data-feather' => 'arrow-left-circle'}
%h1.text-center User info
%br/
%br/
.row
  .col-12
    .action-bar
      = link_to edit_admin_user_path(@user), class: 'btn btn-primary btn-sm mr-1' do
        %span{'data-feather' => 'edit'}
      = link_to admin_user_path(@user), method: :delete, class: 'btn btn-primary btn-sm mr-1' do
        %span{'data-feather' => 'trash'}
      = link_to reset_password_admin_user_path, class: 'btn btn-primary btn-sm' do
        %span{'data-feather' => 'tool'}
        Reset password
.row
  .col-md-6.mt-5.col.col-sm-6.col-xs-12
    .card.p-3
      %h6.text-center User card
      %hr
        %p#notice= notice
        %dl.row
          %dt.col-sm-6 Name:
          %dd.col-sm-5
            = @user.name
          %dt.col-sm-6 Email:
          %dd.col-sm-5
            = @user.email
          %dt.col-sm-6 Mobile:
          %dd.col-sm-5
            = @user.mobile
          %dt.col-sm-6 Admin:
          %dd.col-sm-5
            = @user.admin
          %dt.col-sm-6 Last Signed in at:
          %dd.col-sm-5
            = @user.last_sign_in_at
          %dt.col-sm-6 Sign_in count:
          %dd.col-sm-5
            = @user.sign_in_count
          - if @user.orders
            %dt.col-sm-6 Orders
            %dd.col-sm-5
              - @orders.each do |user_order|
                = link_to admin_order_path(user_order) do
                  %li
                    %span #{user_order.order_number}
- @addresses.each do |address|
  = render "/shared/address", address: address
